<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UseGPS" >

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Previous GPS" />

    <EditText
        android:id="@+id/prev_loc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:hint="Disabled for now." >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Current GPS"
         />

    <EditText
        android:id="@+id/gps_loc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Searching..." >
    </EditText>
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Nearest City"
         />

    <EditText
        android:id="@+id/nearest_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Not yet implemented" >
    </EditText>
    
    
</LinearLayout>